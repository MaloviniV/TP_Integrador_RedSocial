doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} | ArteSano
    link(rel="icon" type="image/png" href="/images/favicon.png")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    link(rel="stylesheet", href="/style_home.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer)
    script(src="/javascripts/script_amistad.js" defer)
  body.d-flex.flex-column.min-vh-100
    header.bg-dark.text-white.py-3.mb-4.sticky-top
      .container.d-flex.justify-content-between.align-items-center
        a(href="/" style="text-decoration:none; color:inherit;")
          h1.mb-0.logo_ARTE-SANO ARTE-SANO
        form.d-flex.ms-4(action="/home/buscar", method="get")
          input.form-control.me-2(type="text" id="buscar" name="buscar" placeholder="Buscar en ArteSano" value=buscar)
          button.btn.btn-outline-light(type="submit")
            i.bi.bi-search
        nav.d-flex.align-items-center.ms-auto
          ul.list-unstyled.d-flex.mb-0
            li.me-3
              a(href="#")
                i.bi.bi-bell.fs-2.text-light
            li.dropdown
              a(href="#" data-bs-toggle="dropdown" aria-expanded="false")
                i.bi.bi-person-circle.fs-2.text-light
              ul.dropdown-menu.dropdown-menu-end
                li
                  a.dropdown-item(href="#") 
                    i.bi.bi-person-lines-fill.me-2
                    | Modificar perfil
                li
                  a.dropdown-item(href="#")
                    i.bi.bi-key.me-2
                    | Cambiar contraseña
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href="/login/logout")
                    i.bi.bi-box-arrow-right.me-2
                    | Cerrar sesión

    main.container.flex-grow-1
      if busqueda
        include busqueda.pug
      else
        include vitrina.pug

    include footer.pug
